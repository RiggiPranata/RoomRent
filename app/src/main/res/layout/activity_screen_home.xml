<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".screen_home">


    <Button
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/goRoom"
        android:text="Room List"
        android:onClick="goToRoom"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/goRent"
        android:onClick="goToRent"
        android:layout_marginBottom="16dp"
        android:text="Rent Room"
        />
    <Button
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:onClick="goToProfile"
        android:layout_height="wrap_content"
        android:id="@+id/goProfile"
        android:text="Profile"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:onClick="goToLogOut"
        android:layout_height="wrap_content"
        android:id="@+id/goLogout"
        android:text="Log Out"
        />




</LinearLayout>